@model GLeague.Models.Team

@{
    Layout = "_AdminPage";

    ViewData["Title"] = "Create team";
    ViewData["Subtitle"] = "Add a new team and assign it to a season.";
    ViewData["ParentTitle"] = "Teams";
    ViewData["ParentUrl"] = Url.Action("Index", "Teams", new { area = "Admin" });
    ViewData["BreadcrumbTitle"] = "Create";

    var seasonOptions = ViewData["SeasonOptions"] as IEnumerable<dynamic>;
    var selectedSeasonId = ViewData["SelectedSeasonId"] as int?;
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Team name -->
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Short name -->
    <div class="mb-3">
        <label asp-for="ShortName" class="form-label"></label>
        <input asp-for="ShortName" class="form-control" />
        <span asp-validation-for="ShortName" class="text-danger"></span>
    </div>

    <!-- Primary color -->
    <div class="mb-3">
        <label asp-for="ColorPrimary" class="form-label"></label>
        <input asp-for="ColorPrimary" class="form-control" />
        <span asp-validation-for="ColorPrimary" class="text-danger"></span>
    </div>

    <!-- Secondary color -->
    <div class="mb-3">
        <label asp-for="ColorSecondary" class="form-label"></label>
        <input asp-for="ColorSecondary" class="form-control" />
        <span asp-validation-for="ColorSecondary" class="text-danger"></span>
    </div>

    <!-- Season dropdown -->
    <div class="mb-3">
        <label asp-for="SeasonId" class="form-label"></label>
        <select asp-for="SeasonId"
                class="form-select"
                asp-items="@(new SelectList(seasonOptions, "Id", "Label", selectedSeasonId))">
            <option value="">-- Select season --</option>
        </select>
        <span asp-validation-for="SeasonId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create team</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </div>
</form>

@section PageScripts {
    <partial name="_ValidationScriptsPartial" />
}
