@model GLeague.Models.Team

@{
    Layout = "_AdminPage";

    ViewData["Title"] = "Create team";
    ViewData["Subtitle"] = "Add a new team and assign it to a season.";
    ViewData["ParentTitle"] = "Teams";
    ViewData["ParentUrl"] = Url.Action("Index", "Teams", new { area = "Admin" });
    ViewData["BreadcrumbTitle"] = "Create";

    var seasonOptions = ViewData["SeasonOptions"] as IEnumerable<dynamic>;
    var selectedSeasonId = ViewData["SelectedSeasonId"] as int?;
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="admin-card">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SeasonId" class="form-label">Season</label>
            <select asp-for="SeasonId" class="form-select">
                <option value="">Select a season</option>
                @if (seasonOptions != null)
                {
                    foreach (var s in seasonOptions)
                    {
                        <option value="@s.Id" selected="@(selectedSeasonId == (int?)s.Id ? "selected" : null)">
                            @s.Label
                        </option>
                    }
                }
            </select>

            <span asp-validation-for="SeasonId" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create team</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </div>
</form>

@section PageScripts {
    <partial name="_ValidationScriptsPartial" />
}
