@model GLeague.Models.Team

@{
    Layout = "_AdminPage";

    ViewData["Title"] = "Edit team";
    ViewData["Subtitle"] = $"Update details for {Model.Name}.";
    ViewData["ParentTitle"] = "Teams";
    ViewData["ParentUrl"] = Url.Action("Index", "Teams", new { area = "Admin", seasonId = Model.SeasonId });
    ViewData["BreadcrumbTitle"] = "Edit";

    var seasonOptions = ViewData["SeasonOptions"] as IEnumerable<dynamic>;
    var selectedSeasonId = ViewData["SelectedSeasonId"] as int?;
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="admin-card">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SeasonId" class="form-label">Season</label>
            <select asp-for="SeasonId" class="form-select">
                <option value="">Select a season</option>
                @if (seasonOptions != null)
                {
                    foreach (var s in seasonOptions)
                    {
                        <option value="@s.Id" selected="@(selectedSeasonId == (int?)s.Id ? "selected" : null)">
                            @s.Label
                        </option>
                    }
                }
            </select>

            <span asp-validation-for="SeasonId" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a asp-action="Index" asp-route-seasonId="@Model.SeasonId" class="btn btn-outline-secondary ms-2">
            Cancel
        </a>
    </div>
</form>

@section PageScripts {
    <partial name="_ValidationScriptsPartial" />
}
