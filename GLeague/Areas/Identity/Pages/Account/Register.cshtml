@page
@model GLeague.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Player registration";
}

<h1 class="h3 mb-3">Player registration</h1>

<p class="text-muted">
    Fill out your player information. A league admin must approve your registration
    before you’ll be able to sign in.
</p>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <h2 class="h5 mt-4">Account</h2>
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Input.Email" class="form-label"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Input.Password" class="form-label"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <h2 class="h5 mt-4">Player profile</h2>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Input.FirstName" class="form-label"></label>
            <input asp-for="Input.FirstName" class="form-control" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Input.LastName" class="form-label"></label>
            <input asp-for="Input.LastName" class="form-control" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Input.PhoneNumber" class="form-label"></label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Input.CityOfResidence" class="form-label"></label>
            <input asp-for="Input.CityOfResidence" class="form-control" />
            <span asp-validation-for="Input.CityOfResidence" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Input.ExperienceLevel" class="form-label"></label>
            <select asp-for="Input.ExperienceLevel"
                    asp-items="Html.GetEnumSelectList<GLeague.Models.ExperienceLevel>()"
                    class="form-select">
            </select>
            <span asp-validation-for="Input.ExperienceLevel" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Input.PreferredPosition" class="form-label"></label>
            <select asp-for="Input.PreferredPosition"
                    asp-items="Html.GetEnumSelectList<GLeague.Models.PlayerPosition>()"
                    class="form-select">
            </select>
            <span asp-validation-for="Input.PreferredPosition" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Input.JerseySize" class="form-label"></label>
            <select asp-for="Input.JerseySize"
                    asp-items="Html.GetEnumSelectList<GLeague.Models.JerseySize>()"
                    class="form-select">
            </select>
            <span asp-validation-for="Input.JerseySize" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Input.JerseyName" class="form-label"></label>
            <input asp-for="Input.JerseyName" class="form-control" />
            <span asp-validation-for="Input.JerseyName" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="Input.JerseyNumber" class="form-label"></label>
            <input asp-for="Input.JerseyNumber" class="form-control" />
            <span asp-validation-for="Input.JerseyNumber" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="Input.HeightInInches" class="form-label"></label>
            <input asp-for="Input.HeightInInches" class="form-control" />
            <span asp-validation-for="Input.HeightInInches" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="Input.WeightInPounds" class="form-label"></label>
            <input asp-for="Input.WeightInPounds" class="form-control" />
            <span asp-validation-for="Input.WeightInPounds" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Input.DateOfBirth" class="form-label"></label>
            <input asp-for="Input.DateOfBirth" class="form-control" />
            <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-4">
        Submit registration
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
