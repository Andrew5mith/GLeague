@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - GLeague Admin</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="admin-body">
    <div class="admin-shell d-flex">
        <!-- SIDEBAR -->
        <aside class="admin-sidebar d-flex flex-column">
            <div class="admin-sidebar-header d-flex align-items-center">
                <div class="admin-logo-circle me-2">
                    <span class="fw-bold">GL</span>
                </div>
                <div class="admin-brand-text">
                    <div class="fw-semibold">GLeague</div>
                    <div class="text-muted small">Admin Panel</div>
                </div>
            </div>

            <nav class="flex-grow-1 mt-4">
                <ul class="nav flex-column admin-nav">
                    <li class="nav-item mb-1">
                        <a class="nav-link admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Seasons" ? "active" : "")"
                           asp-area="Admin" asp-controller="Seasons" asp-action="Index">
                            <span class="admin-nav-icon">📅</span>
                            Seasons
                        </a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Teams" ? "active" : "")"
                           asp-area="Admin" asp-controller="Teams" asp-action="Index">
                            <span class="admin-nav-icon">🏀</span>
                            Teams
                        </a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link admin-nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")"
                           asp-area="Admin" asp-controller="Users" asp-action="Index">
                            <span class="admin-nav-icon">👤</span>
                            Users
                        </a>
                    </li>
                    <li class="nav-item mb-1">
                        <a asp-area="Admin"
                           asp-controller="Registrations"
                           asp-action="Index"
                           class="nav-link">
                            Registrations
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="admin-sidebar-footer">
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="small text-decoration-none text-muted">
                    ← Back to site
                </a>
            </div>
        </aside>

        <!-- MAIN COLUMN -->
        <div class="admin-main flex-grow-1 d-flex flex-direction-column">
            <!-- HEADER -->
            <header class="admin-topbar">
                <div class="admin-topbar-inner d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <button type="button"
                                class="btn admin-hamburger-btn"
                                id="adminSidebarToggle"
                                aria-label="Toggle sidebar">
                            <span class="admin-hamburger-icon">
                                <span></span>
                                <span></span>
                                <span></span>
                            </span>
                        </button>

                        <div class="admin-search d-none d-md-flex align-items-center">
                            <span class="admin-search-icon">&#128269;</span>
                            <input type="text"
                                   class="form-control admin-search-input"
                                   placeholder="Search…" />
                        </div>
                    </div>

                    <div class="admin-topbar-right d-flex align-items-center gap-3">
                        <button type="button"
                                class="btn btn-sm admin-icon-btn d-none d-md-inline-flex"
                                title="Notifications">
                            🔔
                        </button>

                        <div class="admin-user d-flex align-items-center gap-2">
                            <div class="text-end small d-none d-sm-block">
                                @User.Identity?.Name
                            </div>
                            <div class="admin-avatar-circle">
                                <span>@(User.Identity?.Name?.FirstOrDefault().ToString().ToUpper() ?? "A")</span>
                            </div>
                        </div>

                        <form asp-area="Identity"
                              asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Action("Index","Home", new { area = "" })"
                              method="post"
                              class="m-0 d-none d-sm-block">
                            <button type="submit"
                                    class="btn btn-sm btn-link text-muted px-2">
                                Logout
                            </button>
                        </form>
                    </div>
                </div>
            </header>

            <!-- SCROLLABLE CONTENT: THIS IS WHERE RenderBody LIVES -->
            <main class="admin-content flex-grow-1">
                <div class="container-fluid py-4">
                    @RenderBody()
                </div>
            </main>

            <footer class="admin-footer mt-auto">
                <div class="container-fluid small text-muted py-2 px-3">
                    &copy; @DateTime.UtcNow.Year - GLeague Admin
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function () {
            var toggle = document.getElementById('adminSidebarToggle');
            if (!toggle) return;

            toggle.addEventListener('click', function () {
                document.body.classList.toggle('admin-sidebar-collapsed');
            });
        })();
    </script>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts")
    }
</body>
</html>
